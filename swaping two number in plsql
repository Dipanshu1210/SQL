declare
num1 number;
num2 number;
temp number;
begin
num1:=1000;
num2:=2000;
dbms_output.put_line('before swaping ');
dbms_output.put_line('num1 = '|| num1 ||' num2 = '|| num2);
temp := num1;
num1 := num2;
num2 := temp;
dbms_output.put_line('after swaping ');
dbms_output.put_line('num1 = '|| num1 ||' num2 = '|| num2);
end;


output

before swaping 
num1 = 1000 num2 = 2000
after swaping 
num1 = 2000 num2 = 1000
